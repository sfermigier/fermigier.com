{% extends "_base.j2" %}

{% block title %}
  <div class="bg-gray-100">
    <div class="max-w-4xl mx-auto py-16">
      {% if page.metadata.image %}
        <div class="flex flex-row items-start space-x-8">

          <div class="flex-1 w-full">
            <h1 class="text-3xl font-bold leading-tight">
              {{ post.title }}
            </h1>

            <div class="text-xl text-gray-600 mt-2 mb-4">{{ post.date }}</div>

            <div class="text-sm">
              {% for tag in post.tags %}
                <a
                  href="{{ tag.url }}"
                  class="bg-yellow-300 py-0.5 px-2 mr-2 rounded-full hover:bg-green-300"
                >
                  {{ tag.name }}
                </a>
              {% endfor %}
            </div>

            <div class="mt-4">
              {{ post.summary }}
            </div>
          </div>

          <div class="flex-1 object-cover hidden md:flex">
            <img
              src="{{ page.metadata.image }}"
              alt=""
              class="h-auto rounded-xl"
            />
          </div>

        </div>

      {% else %}
        <h1 class="text-3xl font-bold leading-tight">
          {{ post.title }}
        </h1>

        <div class="text-xl text-gray-600 mt-2 mb-4">{{ post.date }}</div>

        <div class="flex text-sm">
          {% for tag in post.tags %}
            <a
              href="{{ tag.url }}"
              class="bg-gray-300 rounded-full px-4 py-2 mr-4 hover:bg-green-300"
            >
              {{ tag.name }}
            </a>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="max-w-4xl mx-auto my-16">
    <div class="markdown-body content mb-8">
      {{ post.body_html | safe }}
    </div>

    <div class="mb-8"><a href="/blog" class="font-bold uppercase active">Back to Blog</a></div>
  </div>
{% endblock %}
